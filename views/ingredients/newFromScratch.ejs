<% layout('layouts/boilerplate')%>
    <div class="row">
        <h2>Add A New Ingredient</h2>
        <form class="row gy-2 gx-3 align-items-center" action="/ingredients/newFromScratch" method="POST">
            <div class="mb-3 col-auto">
                <label class="form-label" for="name">Name:</label>
                <input class="form-control" type="text" id='name' name='ingredient[name]'>
            </div>
            <div class="mb-3 col-auto">
                <label class="form-label" for="description">Description:</label>
                <input class="form-control" type="text" id='upc' name='ingredient[description]'>
            </div>
            <div class="mb-3 col-auto">
                <label class="form-label" for="quantity">Quantity:</label>
                <input class="form-control" type="number" id='quantity' name='ingredient[quantity]' min=1 value=1>
            </div>
            <div class="mb-3 col-auto">
                <label class="form-label" for="quantityType">Quantity Type</label>
                <input class="form-control" type="text" id='quantityType' name='ingredient[quantityType]'
                    placeholder="ex. tsp(s) or jar(s)">
            </div>
            <div class="mb-3 col-auto">
                <button class="btn btn-success">Add Ingredient</button>
            </div>
    </div>
    <div class="row">
        <h2>Items</h2>
        <div class="mb-3 col-auto">
            <% allItems.forEach(function(item, i) {%>
                <div class="col-auto form-check-inline">
                    <ul>
                        <li>
                            <%=item.title%>
                        </li>
                        <div class="form-check-inline">
                            <input type="checkbox" id="ing-<%=i%>" name="addItems[]" value="<%=item._id%>">
                        </div>
                        <label for="ing-<%=i%>">Attach to Ingredient?</label>
                    </ul>
                </div>
                <% }) %>
        </div>
        <div class="row mb-3">
            <h2>Recipes</h2>
            <% allRecipes.forEach(function(recipe, i) {%>
                <div class="col-auto form-check-inline">
                    <ul>
                        <li>
                            <%=recipe.name%>
                        </li>
                        <div class="form-check-inline">
                            <input type="checkbox" id="ing-<%=i%>" name="addRecipes[]" value="<%=recipe._id%>">
                        </div>
                        <label for="ing-<%=i%>">Attach to Ingredient?</label>
                    </ul>
                </div>
                <% }) %>
        </div>
    </div>
    </form>
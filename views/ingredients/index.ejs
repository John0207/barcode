<% layout("layouts/boilerplate")%>
    <a href="/ingredients/newFromScratch" class="btn btn-success">Make a new Ingredient</a>
    <h1>All Ingredients</h1>
    <div class="container mt-3">
        <div class="row">
            <% for ( let ingredient of ingredients) { %>
                <div class="col-auto mb-3">
                    <div class="card mb-3" style="width: 12rem;">
                        <div class="card-body">
                            <div class="card-title">
                                <h5>
                                    <%=ingredient.name%>
                                </h5>
                            </div>
                            <p class="card-text">
                                description: <%=ingredient.description%>
                            </p>
                            <p class="card-text">
                                quantity: <%=ingredient.quantity%>
                                    <%=ingredient.quantityType%>
                            </p>
                            <p class="card-text">
                                Date created: <%=formatDate(ingredient.createdDate)%>
                            </p>
                            <a href="/ingredients/<%=ingredient._id%>" class="btn btn-primary">View <%=ingredient.name%>
                            </a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>